{
  "name": "stein/stein",
  "description": "The PSR-assembled, FrankenPHP-ready, high-performance micro-framework.",
  "license": "MIT",
  "keywords": [
    "framework",
    "micro-framework",
    "psr",
    "psr-7",
    "psr-15",
    "frankenphp",
    "middleware",
    "router"
  ],
  "authors": [
    {
      "name": "Alexandre Debussch√®re",
      "email": "alexandre.debusschere@hey.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "league/container": "^5.1",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "borschphp/requesthandler": "^2.2",
    "middlewares/cors": "^2.1",
    "middlewares/fast-route": "^2.1",
    "middlewares/request-handler": "^2.1",
    "middlewares/trailing-slash": "^2.1",
    "middlewares/payload": "^3.1",
    "middlewares/error-handler": "^3.1",
    "monolog/monolog": "^3.10",
    "borschphp/config": "^1.3",
    "debuss-a/problem-details": "^1.0",
    "debuss-a/awareness": "^1.0",
    "mezzio/mezzio-template": "^3.0",
    "mezzio/mezzio-platesrenderer": "^2.14"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "pestphp/pest": "^4.3"
  },
  "autoload": {
    "files": [
      "bootstrap/defines.php",
      "bootstrap/helpers.php"
    ],
    "psr-4": {
      "Application\\": "src/Application",
      "Domain\\": "src/Domain",
      "Infrastructure\\": "src/Infrastructure"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8080 -t ./public/ ./public/index.php"
    ],
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "docker compose up --build"
    ],
    "stop": "docker compose down",
    "shell": "docker compose exec app sh",
    "test": "docker compose exec app vendor/bin/pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
